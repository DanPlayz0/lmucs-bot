{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "isolatedModules": true,
    "allowJs": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*.*"],
  "exclude": ["node_modules", "build"]
}